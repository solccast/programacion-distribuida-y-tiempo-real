Vagrant.configure("2") do |config|
  (1..2).each do |i|
    config.vm.define "vm#{i}" do |machine|
      machine.vm.box = "hashicorp/bionic64"
      machine.vm.network "private_network", type: "dhcp"
      machine.vm.hostname = "vm#{i}"

      # Instalamos dependencias básicas
      machine.vm.provision "shell", inline: <<-SHELL
        apt-get update
        apt-get install -y net-tools libc-dev-bin build-essential
        SHELL

      # Ejecucion particular de cada VM 
      if i == 1
        # ----------- Ping Pong Servidor -----------
        machine.vm.provision "shell", path: "setup_server.sh" 
        machine.vm.provision "shell", inline: <<-SHELL
        #Codigo bash
        SCRIPT="/home/vagrant/run_server.sh"
        LOG="/vagrant/server.$(date +%s).log"
        cd /home/vagrant
        nohup /home/vagrant/run_server.sh >>"$LOG" 2>&1 &
        echo "Ejecución programada"
        SHELL
      else
        # ----------- Ping Pong Cliente -----------
        machine.vm.provision "shell", path: "setup_client.sh"
        machine.vm.provision "shell", inline: <<-SHELL
        #Codigo bash
        SERVER_IP=$(cat /vagrant/server_ip.txt)
        SCRIPT="/home/vagrant/run_client.sh"
        LOG="/vagrant/client_results.txt" 
        cd /home/vagrant
        nohup /home/vagrant/run_client.sh $SERVER_IP >>"$LOG" 2>&1 &
        echo "Ejecución programada"
        SHELL
      end
    end
  end
end
