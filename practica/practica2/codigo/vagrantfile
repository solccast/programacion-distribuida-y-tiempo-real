Vagrant.configure("2") do |config|
  # Box oficial de Ubuntu 22.04 LTS (Jammy Jellyfish)
  config.vm.box = "hashicorp/bionic64"

  # Nombre de host dentro de la VM
  config.vm.hostname = "ubuntu-prueba-2"

  # Red privada para que puedas entrar v√≠a IP (opcional)
  config.vm.network "private_network", ip: "192.168.56.20"

  # Ajustes opcionales de VirtualBox (memoria/CPU)
  config.vm.provider "virtualbox" do |vb|
    vb.memory = "1024"
    vb.cpus = 1
  end
end
